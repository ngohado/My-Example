<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hado.myexample.notification.NotificationActivity">


    <Button
        android:id="@+id/btn_normal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Show Normal"/>

    <Button
        android:id="@+id/btn_effect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/btn_normal"
        android:text="Sound and Vibrate"/>

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_effect"
        android:layout_marginTop="100dp"
        android:text="Custom view"/>

</RelativeLayout>
